{
  "name": "backend",
  "scripts": {
    "dev": "bun --hot --no-clear-screen run src/index.ts",
    "db:push": "bun run --bun drizzle-kit push",
    "db:generate": "bun run --bun drizzle-kit generate",
    "db:migrate": "bun run --bun drizzle-kit migrate",
    "db:studio": "bun run drizzle-kit studio",
    "db:check": "bun run --bun drizzle-kit check",
    "format:check": "prettier . --check"
  },
  "dependencies": {
    "@clerk/backend": "^2.6.2",
    "@hono/bun-compress": "^0.1.0",
    "@hono/clerk-auth": "^3.0.3",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.5",
    "mysql2": "^3.14.2",
    "uuid": "^11.1.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.39.0"
  }
}
